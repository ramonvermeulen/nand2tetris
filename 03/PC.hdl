/**
 * A 16-bit counter.
 * if      reset(t): out(t+1) = 0
 * else if load(t):  out(t+1) = in(t)
 * else if inc(t):   out(t+1) = out(t) + 1
 * else              out(t+1) = out(t)
 */
CHIP PC {
    IN in[16], reset, load, inc;
    OUT out[16];
    
    PARTS:
    Inc16(in=regout, out=increment);
	Mux16(a=false, b=increment, sel=inc, out=incOut);
	Mux16(a=incOut, b=in, sel=load, out=loadOut);
	Mux16(a=loadOut, b=false, sel=reset, out=resetOut);
	Or(a=load, b=reset, out=loadReset);
	Or(a=loadReset, b=inc, out=loadResetInc);
    Register(in=resetOut, load=loadResetInc, out=regout);
	Or16(a=regout, b=regout, out=out);
}
